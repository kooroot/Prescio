# ============================================
# Prescio Environment Variables
# ============================================
# Copy to .env and fill in your values

# ------ Server ------
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ------ AI Agents ------
# Required for AI-powered game bots (Claude)
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# ------ Game Settings ------
# Default game language (en | ko | ja | zh)
GAME_LANGUAGE=en

# ------ Monad Chain ------
MONAD_RPC_URL=https://testnet.monad.xyz
MONAD_CHAIN_ID=10143

# ------ Contracts (deployed addresses) ------
# Leave as 0x000... to disable on-chain betting
PRESCIO_MARKET_ADDRESS=0x0000000000000000000000000000000000000000
PRESCIO_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# ------ Server Wallet (owner of PrescioMarket contract) ------
# Required for on-chain betting features
SERVER_PRIVATE_KEY=0x...

# ------ Frontend (Vite env vars) ------
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001
VITE_MONAD_RPC_URL=https://testnet.monad.xyz
